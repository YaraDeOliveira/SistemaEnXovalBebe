@page
@model SistemaEnxoval.Pages.Portal.IndexModel
@{
    Layout = "_LayoutPortal";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Tamanho</th>
            <th scope="col">Quantidade Requerida</th>
            <th scope="col">Estoque</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listItems)
        {
            <tr>
                <th scope="row"></th>
                <td>@item.Item.Product</td>
                <td>@item.Item.Size</td>
                <td>@item.Item.Quantity</td>
                <td>
                    <input class="form-control form-control-sm" type="number" id="number-stock" value="@item.Stock" onchange="changeNumber(this, @item.Id)" aria-label=".form-control-sm example">
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function changeNumber(input, id) {
        if (input.value < 0) {
            input.value = 0
            return
        }

        fetch(`User/ChangeStock?id=${id}&stock=${input.value}`, {
            headers: {
                'Accept': 'application/json'
            }
        })
        //.then(response => response.text())
        //.then(text => console.log(text))
    }
</script>