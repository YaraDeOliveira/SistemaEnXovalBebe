@page
@using SistemaEnxoval.Model;
@model SistemaEnxoval.Pages.User.LoginModel
@{
    ViewData["Title"] = "Login";
}
<h1>Acessar</h1>


<hr />
<div class="row" id="form">
    <div class="col-md-10">
        <form method="post">
            <div class="form-group">
                <label asp-for="Login.Email" class="control-label"></label>
                <input asp-for="Login.Email" class="form-control" />
                <span asp-validation-for="Login.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.Password" class="control-label"></label>
                <input type="password" asp-for="Login.Password" class="form-control" />
                <span asp-validation-for="Login.Password" class="text-danger"></span>
            </div>
            </br>
            <div class="form-group">
                <a asp-action="Create" asp-controller="User" class="btn btn-secondary">Primeiro Acesso </a>
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}